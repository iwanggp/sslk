<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/woklk_default_bg">

    <RelativeLayout
        android:id="@+id/profileContainer"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/default_avatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_toRightOf="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"
                android:text="杨冠华" />

            <TextView
                android:id="@+id/userDesc"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:text="个人简介：暂无介绍" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myVioContainer"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icMyVio"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_wo_my_vio" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#444648"
            android:textSize="18sp"
            android:layout_toRightOf="@id/icMyVio"
            android:paddingLeft="10dp"
            android:text="我的违章" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myVioFeeContainer"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icMyVioFee"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_wo_my_vio" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#444648"
            android:textSize="18sp"
            android:layout_toRightOf="@id/icMyVioFee"
            android:paddingLeft="10dp"
            android:text="违章缴费" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myPostContainer"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icMyPost"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_my_fav" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icMyPost"
            android:textColor="#444648"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:text="我的话题" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myFavContainer"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icMyFav"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_wo_fav" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icMyFav"
            android:textColor="#444648"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:text="路况收藏" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>


    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:text="注销"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@color/red" />
</LinearLayout>
