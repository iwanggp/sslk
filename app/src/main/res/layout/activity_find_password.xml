<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/woklk_default_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/phoneNumContainer"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_login_username" />

        <EditText
            android:id="@+id/phoneNumEt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:hint="请输入手机号" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pwdContainer"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_login_password" />

        <EditText
            android:id="@+id/pwdEt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="请输入重置密码" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pwdVerifyContainer"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_login_password" />

        <EditText
            android:id="@+id/pwdVerifyEt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="请确认密码" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/checkNumContainer"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/checkNum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/getCheckNum"
            android:background="@null"
            android:maxLength="6"
            android:maxLines="1"
            android:hint="请输入验证码" />

        <Button
            android:id="@+id/getCheckNum"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_alignParentRight="true"
            android:background="@color/woklk_orange_1"
            android:textColor="@color/white"
            android:text="获取验证码" />
    </RelativeLayout>
</LinearLayout>
